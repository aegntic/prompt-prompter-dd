{
    "slos": [
        {
            "name": "Prompt Prompter - Latency SLO",
            "description": "99% of prompt analysis requests complete within 2 seconds",
            "type": "metric",
            "target_threshold": 99.0,
            "timeframe": "7d",
            "query": {
                "numerator": "sum:prompt.latency_ms{service:prompt-prompter}.rollup(count, 60) by {*}.count_values(values <= 2000)",
                "denominator": "sum:prompt.latency_ms{service:prompt-prompter}.rollup(count, 60) by {*}"
            },
            "tags": [
                "service:prompt-prompter",
                "slo_type:latency",
                "team:ai-platform"
            ],
            "warning_threshold": 99.5,
            "monitor_ids": []
        },
        {
            "name": "Prompt Prompter - Accuracy SLO",
            "description": "95% of prompt analyses achieve accuracy score >= 0.8",
            "type": "metric",
            "target_threshold": 95.0,
            "timeframe": "7d",
            "query": {
                "numerator": "count:prompt.accuracy{service:prompt-prompter,accuracy_score:>=0.8}",
                "denominator": "count:prompt.accuracy{service:prompt-prompter}"
            },
            "tags": [
                "service:prompt-prompter",
                "slo_type:accuracy",
                "team:ai-platform"
            ],
            "warning_threshold": 97.0,
            "monitor_ids": []
        },
        {
            "name": "Prompt Prompter - Availability SLO",
            "description": "99.9% service availability (successful requests)",
            "type": "metric",
            "target_threshold": 99.9,
            "timeframe": "30d",
            "query": {
                "numerator": "sum:prompt.requests{service:prompt-prompter}.as_count() - sum:prompt.errors{service:prompt-prompter}.as_count()",
                "denominator": "sum:prompt.requests{service:prompt-prompter}.as_count()"
            },
            "tags": [
                "service:prompt-prompter",
                "slo_type:availability",
                "team:ai-platform"
            ],
            "warning_threshold": 99.95,
            "monitor_ids": []
        }
    ],
    "setup_instructions": {
        "note": "These SLO definitions are templates. To create them in Datadog:",
        "steps": [
            "1. Go to Datadog > Service Level Objectives > New SLO",
            "2. Select 'Metric-based' SLO type",
            "3. Configure the numerator and denominator queries as shown above",
            "4. Set the target percentage and timeframe",
            "5. Add tags and link to relevant monitors",
            "6. Save and enable alerting on error budget burn rate"
        ],
        "api_example": {
            "method": "POST",
            "url": "https://api.datadoghq.com/api/v1/slo",
            "headers": {
                "DD-API-KEY": "${DD_API_KEY}",
                "DD-APPLICATION-KEY": "${DD_APP_KEY}"
            }
        }
    }
}